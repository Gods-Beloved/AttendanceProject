<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/v_constraint_layout"
    android:onClick="constraintClick4"
    android:background="@drawable/id_background"
    android:layout_height="match_parent"
    tools:context=".signin.StudentVerification">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <TextView
            android:id="@+id/v_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/v_username"
            android:hint="Username"
            style="@style/studentEditText" />

        <EditText

            android:id="@+id/v_password"
            style="@style/studentEditText"
            android:hint="Password"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/v_login_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/id_login_button_background"
            android:text="Login"
            android:textColor="@color/black"
            app:backgroundTint="@color/id_button" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/v_forgot_pword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password? "
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/v_reset_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/v_forgot_pword"
                app:layout_constraintStart_toEndOf="@+id/v_forgot_pword"
                app:layout_constraintTop_toTopOf="@+id/v_forgot_pword" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>