<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        android:elevation="4dp"
        app:cardCornerRadius="4dp">
        <com.facebook.shimmer.ShimmerFrameLayout

            android:id="@+id/v_shimmer"
            app:shimmer_auto_start="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            >

            <TextView
                android:id="@+id/v_indexNumber_coursecode"
                android:layout_width="wrap_content"
                android:background="@color/background"
                android:text="Computer Science"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/background"
                android:textSize="22sp" />


            <TextView
                android:id="@+id/v_student_lecturer_name"
                android:layout_width="wrap_content"
                android:text="css Lecturer"
                android:layout_marginStart="16dp"
                android:textAllCaps="true"
                android:layout_marginEnd="16dp"
                android:textColor="@color/background"
                android:background="@color/background"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_indexNumber_coursecode"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/v_total"
                android:background="@color/background"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:text="0"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@color/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressTint="@color/app_green"
                android:progressBackgroundTint="#95919191"
                android:layout_width="match_parent"
                android:layout_below="@id/v_student_lecturer_name"
                android:layout_height="4dp"
                android:layout_marginTop="6dp"
                android:scaleY="2"
                android:indeterminate="false" />

        </RelativeLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.cardview.widget.CardView>



